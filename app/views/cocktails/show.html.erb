<h1><%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose| %>
<ul>
  <li><%= dose.description %></li>
  <li><%= dose.ingredient.name %></li>
<%= link_to cocktail_dose_path(@cocktail, dose),
  method: :delete,
  data: { confirm: "Are you sure?" } do %>
  Delete dose
<% end %>
</ul>

<% end %>

<%= link_to new_cocktail_dose_path(@cocktail) do %>
  <i class="btn btn-primary"></i> Create dose
<% end %>

<%= link_to cocktails_path do %>
  <i class="fa fa-history"></i> Back to list
<% end %>
